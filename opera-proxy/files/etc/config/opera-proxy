config instance 'Europe'
	option enabled '1'
	option args '-bind-address 0.0.0.0:28080 -country EU -verbosity 50'

config instance 'Americas'
	option enabled '1'
	option args '-bind-address 0.0.0.0:18080 -country AM -verbosity 50'

